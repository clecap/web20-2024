{
  "manifest_version": 2,
  "name": "ChatGPT Thunderbird",
  "short_name": "ChatGPT",
  "description": "Reply to emails with ChatGPT",
  "version": "1â€¦0.0",
  "developer": {
    "name": "Niklas Tamm, Lennart Dobermann, Daniel Passauer",
