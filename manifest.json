{
  "manifest_version": 2,
  "name": "LLM Answer",
  "short_name": "LLM Answer",
  "description": "Reply to emails using LLMs",
  "version": "0.1",
  "developer": {
    "name": "Niklas Tamm, Lennart Dobermann, Daniel Passauer, web20-2024 Team",
    "url": "https://github.com/clecap/web20-2023/tree/chatgpt-thunderbird"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addonpoc@addons.thunderbird.net",
      "strict_min_version": "115.0",
      "strict_max_version": "115.*"
    }
  },
  "icons": {
    "64": "images/icon-64px.png",
    "32": "images/icon-32px.png",
    "16": "images/icon-16px.png"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "message_display_action": {
    "default_popup": "mainPopup/popup.html"
  },
  "permissions": [
    "messagesRead",
    "compose",
    "accountsRead",
    "storage"
  ]
}
